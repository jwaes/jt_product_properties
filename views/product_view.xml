<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="product_normal_form_view" model="ir.ui.view">
  <field name="name">product_normal_form_view</field>
  <field name="model">product.product</field>
  <field name="inherit_id" ref="product.product_normal_form_view"/>
  <field name="arch" type="xml">
   <xpath expr="//notebook" position="inside">
    <page name="jt_product_properties" string="Properties">
     <field name="property_kv_ids" widget="one2many">
      <tree editable="bottom" string="Properties">
       <field invisible="True" name="property_type"/>
       <field name="key_id"/>
       <field name="value_id" readonly="property_type != 'selection'" widget="selection"/>
       <field name="text" readonly="property_type != 'free_text'"/>
       <field context="{'product_id': active_id}" invisible="True" name="product_id"/>
      </tree></field>
     <h4>
      Calculated properties
     </h4>
     <field name="all_kvs" widget="one2many">
      <tree default_order="code,ref_name" readonly="True" string="Calculated Properties">
       <field invisible="True" name="property_type"/>
       <field name="ref_name"/>
       <field name="code"/>
       <field name="key_id"/>
       <field name="value_id" readonly="property_type != 'selection'" widget="selection"/>
       <field name="text" readonly="property_type != 'free_text'"/>
      </tree></field>
    </page>
   </xpath></field>
 </record>
 <record id="product_template_only_form_view" model="ir.ui.view">
  <field name="name">product_template_form_view</field>
  <field name="model">product.template</field>
  <field name="inherit_id" ref="product.product_template_only_form_view"/>
  <field name="arch" type="xml">
   <xpath expr="//notebook" position="inside">
    <page name="jt_product_properties" string="Properties">
     <field invisible="True" name="has_active_attributes"/>
     <field name="tmpl_property_kv_ids" widget="one2many">
      <tree editable="bottom" string="Properties">
       <field invisible="True" name="property_type"/>
       <field name="key_id"/>
       <field name="value_id" readonly="property_type != 'selection'" widget="selection"/>
       <field name="text" readonly="property_type != 'free_text'"/>
       <field context="{'product_template_id': active_id}" invisible="True" name="product_template_id"/>
       <field invisible="True" name="possible_product_template_attribute_value_ids"/>
       <field column_invisible="parent.has_active_attributes == False" name="product_template_attribute_value_ids" options="{'no_create': True}" widget="many2many_tags"/>
      </tree></field>
     <h4>
      Calculated template properties
     </h4>
     <field name="tmpl_all_kvs" widget="one2many">
      <tree default_order="code,ref_name" readonly="True" string="Calculated Properties">
       <field invisible="True" name="property_type"/>
       <field name="ref_name"/>
       <field name="code"/>
       <field name="key_id"/>
       <field name="value_id" readonly="property_type != 'selection'" widget="selection"/>
       <field name="text" readonly="property_type != 'free_text'"/>
      </tree></field>
    </page>
   </xpath></field>
 </record>
</odoo>